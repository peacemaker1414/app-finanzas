@{
    ViewData["Title"] = "Index";
}

<section class="py-3 py-md-5 px-3 px-md-4">
    <div class="container">
        <!-- Header/Navbar -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 mb-md-5 gap-3">
            <div class="d-flex align-items-center gap-2">
                <div class="bg-success rounded-circle" style="width: 20px; height: 20px;"></div>
                <h5 class="fw-bold m-0 text-white">Finanzas <span class="text-success">Personales</span></h5>
            </div>
            <div class="d-flex flex-wrap justify-content-center gap-2">
                
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-success" asp-area="" asp-controller="Operaciones" asp-action="Resumen">Ver operaciones</a>
                    <a class="btn btn-outline-light" asp-area="" asp-controller="Ingreso" asp-action="Agregar">Agregar Ingreso</a>
                    <a class="btn background-dark text-white" asp-area="" asp-controller="Egreso" asp-action="Agregar">Agregar Egreso</a>
                }
                else
                {
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="btn btn-outline-light btn-sm">¿Quiénes somos?</a>
                    <a href="/Account/Login" class="btn btn-success btn-sm">Iniciar sesión con Google</a>
                }
            </div>
        </div>

        <!-- Main Content -->
        <div class="row align-items-center">
            <!-- Text Section -->
            <div class="col-12 col-md-6 order-2 order-md-1 mt-4 mt-md-0">
                <h1 class="fw-bold font-primary mb-3 display-5 display-md-4">Mejorá drásticamente <span class="font-secondary">tus finanzas</span></h1>
                <p class="mb-4 text-white fs-5 fs-md-6">
                    Realizá un seguimiento de tus Ingresos y Egresos, monitoreándolos con un dashboard especialmente diseñado para mejores insights.
                </p>
            </div>

            <!-- Graphic Element -->
            <div class="col-12 col-md-6 order-1 order-md-2 d-flex justify-content-center">
                <div class="d-flex justify-content-center align-items-center shadow-sm"
                     style="
                        width: clamp(100px, 25vw, 150px);
                        height: clamp(100px, 25vw, 150px);
                        border-radius: 50%;
                        background-color: #81a78a;
                        font-size: clamp(2rem, 10vw, 3rem);
                        font-weight: bold;
                        color: white;
                        transition: transform 0.2s ease-in-out;
                     "
                     onmouseover="this.style.transform='scale(1.05)'"
                     onmouseout="this.style.transform='scale(1)'">
                    $
                </div>
            </div>
        </div>
    </div>
</section>